<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circle_background_for_layouts"
        android:backgroundTint="@color/yellow_faint">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/ic_location_marker" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Device Location is off"
        android:textAppearance="@style/headerText"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Please turn on your device location to get accurate results"
        android:textAlignment="center"
        android:textAppearance="@style/headerText"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray_line" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/turn_on_device_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:text="Turn on Device Location"
        android:textAllCaps="false"
        android:textAppearance="@style/headerText"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:elevation="0dp"
        app:icon="@drawable/ic_my_location"
        app:iconGravity="textStart"
        app:iconTint="@color/green" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/gray_line" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select_location_manually"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:text="Select Location Manually"
        android:textAllCaps="false"
        android:textAppearance="@style/headerText"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:elevation="0dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconTint="@color/black" />

</LinearLayout>